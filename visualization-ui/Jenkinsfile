pipeline {
    agent any
    tools {
        maven 'maven-latest'
        jdk 'JDK-17'
        nodejs 'nodejs-latest'
    }
    environment {
        BACKEND_IMAGE = "digtranza/visualization-backend"
        FRONTEND_IMAGE = "digtranza/visualization-frontend"
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/jerryben/DevOps-Monitoring-Microservices.git'
                sh 'ls -la'  // Debugging: Ensure repo is cloned
            }
        }

        stage('Build Backend') {
            steps {
                dir('visualization-ui/backend') {
                    sh '''
                    echo "ğŸ” Checking directory contents before build:"
                    ls -la

                    echo "ğŸ“Œ Creating Maven settings file with S3 mirror..."
                    cat > maven-settings.xml << EOF
                    <settings>
                      <mirrors>
                        <mirror>
                          <id>central-s3</id>
                          <name>AWS S3 Maven Central Mirror</name>
                          <url>https://s3.amazonaws.com/maven-central/</url>
                          <mirrorOf>central</mirrorOf>
                        </mirror>
                      </mirrors>
                    </settings>
                    EOF

                    echo "ğŸš€ Starting Maven build with verbose logging..."
                    export MAVEN_OPTS="-Dmaven.wagon.http.retryHandler.count=5 -Dmaven.wagon.http.retryHandler.requestSentRetryEnabled=true"
                    mvn -X -e -s maven-settings.xml clean package -DskipTests

                    echo "ğŸ” Checking if JAR file was built:"
                    ls -la target/
                    find target/ -type f -name "*.jar" || echo "âŒ No JAR file found!"
                    '''
                }
            }
        }

        stage('Build and Push Backend Image') {
            steps {
                dir('visualization-ui/backend') {
                    withDockerRegistry([credentialsId: 'Docker-Token', url: '']) {
                        sh '''
                        echo "ğŸ³ Building backend Docker image..."
                        docker build -t $BACKEND_IMAGE:latest .

                        echo "ğŸ“¤ Pushing backend image..."
                        docker push $BACKEND_IMAGE:latest
                        '''
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('visualization-ui/frontend') {
                    sh '''
                    echo "ğŸ” Checking directory contents before build:"
                    ls -la
                    
                    echo "ğŸ“¦ Installing dependencies (verbose mode)..."
                    npm install --verbose

                    echo "ğŸš€ Running frontend build..."
                    set -x  # Enable shell command tracing
                    npm run build
                    set +x  # Disable tracing

                    echo "ğŸ” Checking if build directory exists:"
                    ls -la build/
                    '''
                }
            }
        }

        stage('Build and Push Frontend Image') {
            steps {
                dir('visualization-ui/frontend') {
                    withDockerRegistry([credentialsId: 'Docker-Token', url: '']) {
                        sh '''
                        echo "ğŸ³ Building frontend Docker image..."
                        docker build -t $FRONTEND_IMAGE:latest .

                        echo "ğŸ“¤ Pushing frontend image..."
                        docker push $FRONTEND_IMAGE:latest
                        '''
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo "âœ… Build and deployment successful!"
        }
        failure {
            echo "âŒ Build failed! Check logs above."
        }
    }
}
