pipeline {
    agent any

    environment {
        BACKEND_IMAGE = 'mydockerhubuser/visualization-backend:latest'
        FRONTEND_IMAGE = 'mydockerhubuser/visualization-frontend:latest'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/myrepo/visualization-ui.git'
            }
        }

        stage('Build Backend') {
            steps {
                script {
                    sh 'docker build -t $BACKEND_IMAGE ./backend'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                script {
                    sh 'docker build -t $FRONTEND_IMAGE ./frontend'
                }
            }
        }

        stage('Push Backend') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh 'docker push $BACKEND_IMAGE'
                }
            }
        }

        stage('Push Frontend') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh 'docker push $FRONTEND_IMAGE'
                }
            }
        }

        stage('Clean Up') {
            steps {
                sh 'docker rmi $BACKEND_IMAGE $FRONTEND_IMAGE'
            }
        }
    }
}
